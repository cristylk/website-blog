<h1>Blog</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
    	<h1 class="article-title"><%= article.title %></h1>
    	<p><% if article.image.exists? %>
      <%= image_tag article.image.url(:medium) %><br/>
      <% end %></p>
      <p><%= article.body %></p>
      <br>
    </li>
  <% end %>
</ul>

<% if logged_in? %>
    <%= link_to "Create a new post", new_article_path, class: 'new_article' %>
    <!--<%= link_to "(logout)", logout_path %>-->
    <br>
      <ul>
        <% @articles.each do |article| %>
          <li>
          <%= link_to article.title, article_path(article), class: 'article_title' %>
          </li>
          <% end %>
      </ul>
<% else %>
